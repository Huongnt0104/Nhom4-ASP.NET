@model IEnumerable<ShoesStore.Models.loaisp>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý loại sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tenloaisp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tenloaisp)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.maloaisp.Trim() }) |
            @Html.ActionLink("Thông tin", "Details", new { id=item.maloaisp.Trim() }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.maloaisp.Trim() })
        </td>
    </tr>
}

</table>
